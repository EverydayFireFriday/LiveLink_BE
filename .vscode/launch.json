{
  // ==============================================
  // Debug Configurations for LiveLink Backend
  // ==============================================
  "version": "0.2.0",
  "configurations": [
    // ==============================================
    // Main Application Debugging
    // ==============================================
    {
      "name": "üöÄ Debug Application",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      }
    },

    // ==============================================
    // TypeScript Direct Debugging
    // ==============================================
    {
      "name": "üîß Debug TypeScript (ts-node)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": ["${workspaceFolder}/src/app.ts"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      }
    },

    // ==============================================
    // Attach to Running Process
    // ==============================================
    {
      "name": "üîó Attach to Process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    },

    // ==============================================
    // Jest Testing
    // ==============================================
    {
      "name": "üß™ Debug Jest Tests (All)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test", "--", "--runInBand"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "üéØ Debug Jest Test (Current File)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test",
        "--",
        "--runInBand",
        "${relativeFile}"
      ],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "üîç Debug Jest Test (Watch Mode)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test:watch", "--", "--runInBand"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      }
    },

    // ==============================================
    // Script Debugging
    // ==============================================
    {
      "name": "üìú Debug Current TypeScript File",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": ["${file}"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      }
    },

    // ==============================================
    // Docker Debugging
    // ==============================================
    {
      "name": "üê≥ Debug in Docker",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "protocol": "inspector"
    },

    // ==============================================
    // Database Migration Scripts
    // ==============================================
    {
      "name": "üóÑÔ∏è Debug Migration Script",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "migrate:up"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      }
    },

    // ==============================================
    // Production Build Debugging
    // ==============================================
    {
      "name": "üèóÔ∏è Debug Production Build",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/app.js",
      "preLaunchTask": "npm: build",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ],

  // ==============================================
  // Compound Configurations
  // ==============================================
  "compounds": [
    {
      "name": "üî• Full Stack Debug (App + Tests)",
      "configurations": ["üöÄ Debug Application", "üß™ Debug Jest Tests (All)"],
      "stopAll": true
    }
  ]
}
