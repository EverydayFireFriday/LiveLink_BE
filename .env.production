# .env.production - Example for production environment

# Application
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://your-frontend-domain.com

# Session and Cookie
SESSION_SECRET=your_strong_session_secret_here # IMPORTANT: Change this to a long, random string
SESSION_MAX_AGE=86400000 # 24 hours in milliseconds

# Cookie Domain (optional, restricts cookie to a specific domain)
# Example: .yourdomain.com (add a leading dot for subdomains)
COOKIE_DOMAIN=

# SameSite Policy (lax, strict, none; default: lax)
# 'none' requires secure: true
COOKIE_SAMESITE=lax

# Brute-force Protection
BRUTE_FORCE_MAX_ATTEMPTS=10
BRUTE_FORCE_BLOCK_DURATION=1800

# MongoDB
MONGO_URI=mongodb://mongo:27017/livelink

# Redis
REDIS_URL=redis://redis:6379

# Email Service (Nodemailer with Gmail example)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com # IMPORTANT: Your Gmail address
EMAIL_PASS=your_gmail_app_password # IMPORTANT: Your Gmail App Password

# Admin Users
ADMIN_EMAILS=admin1@example.com,admin2@example.com # Comma-separated list of admin emails

# Logging
LOG_LEVEL=info # Recommended for production (options: error, warn, info, http, verbose, debug, silly)

# ==============================================
#  Google OAuth (OAUTH)
# ==============================================

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==============================================
#  Apple OAuth (OAUTH)
# ==============================================

# Apple OAuth 2.0
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY="your-apple-private-key"

