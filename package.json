    "mongodb": "^6.3.0",
    "redis": "^4.6.5",
    "express-session": "^1.17.3",
    "connect-redis": "^6.1.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "bcryptjs": "^2.4.3",
